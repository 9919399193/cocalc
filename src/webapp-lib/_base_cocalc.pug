//- the main html template for the static pages (shares some _inc_* files with app.pug)
//- the parts below are used by the open cocalc edition

mixin start_button
  p
    a.btn.btn-success.btn-lg.cc-create-account-btn(href=PREFIX + "app") Create Account!
  p or #[a(href=PREFIX + "app") sign in] with your account


mixin video-player
  div.video-player.fit
    div.video-overlay.
      #[span(style="font-size:300%") &#9654;]
      #[br/]
      click to play
    video(loop).fit
      block



doctype html

-
  var NAME          = htmlWebpackPlugin.options.title;
  var URL           = htmlWebpackPlugin.options.theme.DOMAIN_NAME;
  var COMPANY_NAME  = htmlWebpackPlugin.options.theme.COMPANY_NAME;
  var COMPANY_EMAIL = htmlWebpackPlugin.options.theme.COMPANY_EMAIL;
  var PREFIX        = htmlWebpackPlugin.options.PREFIX;
  var subtitle      = null;
  var navbar_active = null;
  function navbar_highlight(what) {
    if (navbar_active == what) {
      return 'active';
    } else {
      return '';
    }
  };

block vars

-
  var fulltitle = htmlWebpackPlugin.options.title;
  if (subtitle) {fulltitle += " - " + subtitle};

html.no-js(lang="en")
  head
    include _inc_head.pug
    title= fulltitle
    block header
    style
      :sass
        html.no-js
          display : none

  body
    style
      :sass
        @import "smc-webapp/_colors.sass"
        nav.navbar.navbar-default
          border-bottom    : 2px solid $COL_GRAY
          background-color : $COL_GRAY_LL
          .get-started
            color        : $COL_BS_GREEN_DD
            font-weight  : bold
          .navbar-header
            margin-top     : 5px;
            img.icon
              height       : 4rem
              width        : auto
              margin-right : 2rem
            img.name
              height       : 3rem
              width        : auto
              margin-right : 2rem
          .navbar-nav>li
            >a
              font-size      : 2rem
            &.active>a
              font-weight  : bold
        div.jumbotron
          padding-top      : 10rem
          background-color : $COL_GRAY_LL
        .center
          text-align     : center
        .right
          text-align     : right
        .vertical-expand
          min-height     : 50vw
        .uppercase
          text-transform : uppercase
        .fit
          width          : 100%
          heigh          : auto
        body
          div.container
            > footer
              margin-top     : 6rem
            > div.row#top
              margin         : 5rem 0 0 0
            > div#software-env-top
              margin         : 2rem 0 5rem 0
        /* used for a.anchor#a-name with an offset to compensate for the static navbar on top */
        a.anchor
          display        : block
          position       : relative
          top            : -5rem
          visibility     : hidden
        blockquote.blockquote
          font-size      : inherit
        th.software
          white-space      : nowrap
        td.version
          font-size        : 120%
          font-weight      : bold
        .btn-xlg
          font-size        : 24px
          line-height      : 1.5
          font-weight      : bold
        .cc-create-account-btn
          font-weight      : bold
        .video-player
          position         : relative
          > .video-overlay
            width            : 100%
            height           : 100%
            position         : absolute
            top              : 0
            left             : 0
            color            : white
            background-color : rgba(0, 0, 0, .5)
            cursor           : pointer
            z-index          : 2
            text-align       : center
            display          : flex
            justify-content  : center
            flex-direction   : column
        a.marker
          padding-left     : 2rem
          padding-right    : 1rem
          text-decoration  : none
          color            : $COL_GRAY_L
          top              : -.5rem
          position         : relative
          font-size        : 90%
          visibility       : hidden
        h1:hover, h2:hover, h3:hover
          > a.marker
            visibility     : visible
            &:hover
              color        : $COL_GRAY
        .youtube-video-container
          width            : 100%
          height           : 0
          padding-bottom   : 45%
          overflow         : hidden

          iframe, object, embed
            position   : absolute
            width      : 95%
            height     : 95%

    nav.navbar.navbar-default.navbar-fixed-top
      div.container
        div.navbar-header
          a(href=PREFIX)
            img.icon(alt=htmlWebpackPlugin.options.title src=require('!file-loader?mimetype=image/svg+xml!cocalc-icon.svg'))
            img.name(alt=htmlWebpackPlugin.options.title src=require('!file-loader?mimetype=image/svg+xml!open-cocalc-font-dark.svg'))
        div.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li(class=navbar_highlight("open-source"))
              a(href="https://github.com/sagemathinc/cocalc") Open-source

            li(class=navbar_highlight('api'))
              a(href=PREFIX + "doc/api.html") API

            li
              a.get-started(href=PREFIX + "app") Sign In

    block content

    include _footer_cocalc.pug

    script
      :coffee-script
        html = document.documentElement
        window.onload = ->
          html.className = html.className.replace(/\bno-js\b/, 'js')

    noscript
      style.
        html.no-js { display: block; }
