//- main landing page

extends ../_base_kucalc.pug

block vars
  -
    navbar_active = 'policies';
    subtitle = 'Policies';

block content

  div.jumbotron
    div.container
      h1 #[a(href=URL) #{COMPANY_NAME}]
      h2 Our terms of service, pricing, copyright and privacy policies.
      div.lighten.
        If you have any questions, email #[a(href="mailto:" + COMPANY_EMAIL) #{COMPANY_EMAIL}].

  div.container.vertical-expand
    div.row
      div.col-md-3
        h2 Terms of Service
        p These govern use of #{NAME}.
        p
          a.btn.btn-default(href="./terms.html" role="button") View details &raquo;
      div.col-md-3
        h2 Privacy
        p.
          This explains how #{COMPANY_NAME}
          seeks to respect the privacy of its users.
        a.btn.btn-default(href="./privacy.html" role="button") View details &raquo;
      div.col-md-3
        h2 Copyright
        p.
          This explains how #{COMPANY_NAME} respects copyright policies,
          and seeks to provide a site that does not infringe on others' copyright.
        a.btn.btn-default(href="./copyright.html" role="button") View details &raquo;
      div.col-md-3
        h2 Pricing
        p.
          This describes the price for each of the #{NAME} products.
        a.btn.btn-default(href="./pricing.html" role="button") View details &raquo;
